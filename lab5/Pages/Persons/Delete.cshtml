@page
@model lab5.Pages.Persons.DeleteModel

<h1>Delete person</h1>

<form method="post">
	<input asp-for="person.Id" hidden />
  <div class="form-group row">
	  <label>Name</label>
	  <div class="col-sm-10">
		  <input asp-for="person.Name" disabled />
	  </div>
  </div>
  <div class="form-group row">
		<label>Address</label>
		<div class="col-sm-10">
			<input asp-for="person.Address" disabled />
		</div>
  </div>
   <div class="form-group row">
		<label>Phone Number</label>
		<div class="col-sm-10">
			<input asp-for="person.PhoneNumber" disabled />
		</div>
  </div>
  <div class="form-group row">
		<label>Birthday</label>
		<div class="col-sm-10">
			<input asp-for="person.Birthday" disabled />
		</div>
  </div>
  <div class="form-group row">
		<label>Ticket Number</label>
		<div class="col-sm-10">
			<input asp-for="person.TicketNumber" disabled />
		</div>
  </div>
  <div class="col-sm-10 pt-2">
	  <button type="submit">Delete</button>
  </div>
</form>