@page
@model lab5.Pages.Readers.DeleteModel

<h1>Delete reader</h1>
<form method="post">
	<input asp-for="reader.Id" hidden />
	<div class="form-group row">
	  <label>Person</label>
	  <div class="col-sm-10">
		<input asp-for="reader.Person.Name" disabled />
	  </div>
  </div>
  <div class="form-group row">
		<label>Book</label>
		<div class="col-sm-10">
			<input asp-for="reader.Book.Name" disabled />
		</div>
  </div>
   <div class="form-group row">
		<label>Date of issue</label>
		<div class="col-sm-10">
			<input asp-for="reader.IssueDate" disabled />
		</div>
  </div>
  <div class="form-group row">
		<label>Date return</label>
		<div class="col-sm-10">
			<input asp-for="reader.ReturnDate" disabled />
		</div>
  </div>
  <div class="col-sm-10 pt-2">
	  <button type="submit">Delete reader</button>
  </div>
</form>