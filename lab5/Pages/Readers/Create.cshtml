@page
@model lab5.Pages.Readers.CreateModel

<h1>Add new reader</h1>
<form method="post">
  <div class="form-group row">
	  <label>Person</label>
	  <div class="col-sm-10">
		  <select asp-for="reader.PersonId" asp-items="@Model.PersonsList">
			<option>Choose person</option>
		  </select>
		  <span asp-validation-for="reader.PersonId"></span>
	  </div>
  </div>
  <div class="form-group row">
		<label>Book</label>
		<div class="col-sm-10">
			<select asp-for="reader.BookId" asp-items="@Model.BooksList">
				<option>Choose book</option>
			</select>
			<span asp-validation-for="reader.BookId"></span>
		</div>
  </div>
   <div class="form-group row">
		<label>Date of issue</label>
		<div class="col-sm-10">
			<input asp-for="reader.IssueDate"/>
			<span asp-validation-for="reader.IssueDate"></span>
		</div>
  </div>
  <div class="form-group row">
		<label>Date return</label>
		<div class="col-sm-10">
			<input asp-for="reader.ReturnDate"/>
			<span asp-validation-for="reader.ReturnDate"></span>
		</div>
  </div>
  <div class="col-sm-10 pt-2">
	  <button type="submit">Add reader</button>
  </div>
</form>